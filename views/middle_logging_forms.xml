<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record model="ir.ui.view" id="middle_logging_team_activity_form">
    <field name="name">middle.logging.team.activity.form</field>
    <field name="model">middle.logging.team.activity</field>
    <field name="priority" eval="1"/>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
              <field name="team"/>
              <field name="clientSatisfactionRate"/>
              <field name="taskWeightRate"/>
              <field name="effectivenessRate"/>
              <field name="effieciencyRate"/>
              <field name="note"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="middle_logging_team_activity_form">
    <field name="name">middle.logging.client.feedback.form</field>
    <field name="model">middle.logging.client.feedback</field>
    <field name="priority" eval="1"/>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="mood"/>
            <field name="note"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="middle_logging_worker_activity_form">
    <field name="name">middle.logging.worker.activity.form</field>
    <field name="model">middle.logging.worker.activity</field>
    <field name="priority" eval="1"/>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
              <field name="worker"/>
              <field name="activity"/>
              <field name="startTime"/>
              <field name="endTime"/>
              <field name="rate"/>
              <field name="note"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="middle_logging_statistics_form">
    <field name="name">middle.logging.statistics.form</field>
    <field name="model">middle.logging.statistics</field>
    <field name="priority" eval="1"/>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="teamRating"/>
            <field name="mitraActivity"/>
            <field name="teamActivity"/>
            <field name="clientSatisfaction"/>
            <field name="averageTime"/>
            <field name="bestJob"/>
            <field name="worstJob"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
  
</odoo>